<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".MainActivity">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/mytoolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FAFAFA"
                android:theme="@style/Theme.AppCompat.Light" />

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">


                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardViewUpdate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="40dp"
                        android:layout_marginTop="200dp"
                        android:layout_marginEnd="40dp"
                        app:cardBackgroundColor="#66b3e5fc"
                        app:cardCornerRadius="24dp"
                        app:cardElevation="3dp"
                        app:cardPreventCornerOverlap="true"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <com.airbnb.lottie.LottieAnimationView
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:paddingLeft="10dp"
                            android:paddingTop="10dp"
                            app:lottie_autoPlay="true"
                            app:lottie_fileName="bimaarbacha.json"
                            app:lottie_loop="true" />

                        <TextView
                            android:id="@+id/textView17"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="120dp"
                            android:layout_marginTop="15dp"
                            android:autoSizeMinTextSize="17sp"
                            android:autoSizeTextType="uniform"
                            android:fontFamily="@font/psb"
                            android:text="UPDATES"
                            android:textColor="@color/black"
                            android:textSize="20sp" />

                        <TextView
                            android:id="@+id/textView18"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="120dp"
                            android:layout_marginTop="45dp"
                            android:autoSizeMinTextSize="17sp"
                            android:fontFamily="@font/ps"
                            android:text="INDIA : 1,82,490"
                            android:textColor="@color/black"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/UpdateText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8dp"
                            android:layout_marginTop="139dp"
                            android:autoSizeMinTextSize="16sp"
                            android:autoSizeTextType="uniform"
                            android:fontFamily="@font/ps"
                            android:text="Click here to get full updates about your state"
                            android:textColor="@color/black" />

                        <TextView
                            android:id="@+id/textView20"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="78dp"
                            android:layout_marginTop="105dp"
                            android:autoSizeMinTextSize="17sp"
                            android:autoSizeTextType="uniform"
                            android:fontFamily="@font/ps"
                            android:text="HIMACHAL PRADESH : 313"
                            android:textColor="@color/black"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/textView21"
                            android:layout_width="wrap_content"
                            android:layout_height="33dp"
                            android:layout_marginStart="120dp"
                            android:layout_marginTop="75dp"
                            android:autoSizeMinTextSize="17sp"
                            android:autoSizeTextType="uniform"
                            android:fontFamily="@font/ps"
                            android:text="RECOVERED : 86,970"
                            android:textColor="@color/black"
                            android:textSize="18sp" />
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardViewfence"

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="40dp"
                        android:layout_marginTop="25dp"
                        android:layout_marginEnd="40dp"
                        app:cardBackgroundColor="#66b39ddb"
                        app:cardCornerRadius="24dp"
                        app:cardElevation="3dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/cardViewUpdate">


                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <com.airbnb.lottie.LottieAnimationView
                                android:id="@+id/lottieAnimationView2"
                                android:layout_width="110dp"
                                android:layout_height="110dp"
                                android:layout_below="@id/textView23"
                                android:layout_marginStart="5dp"
                                android:layout_marginTop="5dp"
                                android:layout_marginBottom="7dp"
                                android:paddingLeft="10dp"
                                app:lottie_autoPlay="true"
                                app:lottie_fileName="geofencing.json"
                                app:lottie_loop="true" />

                            <TextView
                                android:id="@+id/textView23"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="10dp"
                                android:layout_marginEnd="20dp"
                                android:fontFamily="@font/psb"
                                android:text="VIRTUAL FENCE"
                                android:textColor="@color/black"
                                android:textSize="22sp" />

                            <TextView
                                android:id="@+id/textView10"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/textView23"
                                android:layout_marginLeft="20dp"
                                android:layout_marginTop="5dp"
                                android:layout_marginRight="20dp"
                                android:layout_toRightOf="@id/lottieAnimationView2"
                                android:autoSizeMinTextSize="17sp"
                                android:autoSizeTextType="uniform"
                                android:paddingBottom="6dp"
                                android:text="Click here to  create a virtual fence of 50 meters around your current location to stay yourslef in safe zone. "
                                android:textSize="17sp" />
                        </RelativeLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/helpCard3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="40dp"
                        android:layout_marginTop="25dp"
                        android:layout_marginEnd="40dp"
                        app:cardBackgroundColor="#6680cbc4"
                        app:cardCornerRadius="24dp"
                        app:cardElevation="3dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/cardViewfence">


                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <com.airbnb.lottie.LottieAnimationView
                                android:id="@+id/animation3"
                                android:layout_width="110dp"
                                android:layout_height="110dp"
                                android:layout_below="@id/textView22"
                                android:layout_marginLeft="5dp"
                                android:layout_marginTop="5dp"
                                android:layout_marginBottom="7dp"
                                android:paddingTop="5dp"
                                app:lottie_autoPlay="true"
                                app:lottie_fileName="msg.json"
                                app:lottie_loop="true" />


                            <TextView
                                android:id="@+id/textView22"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:layout_marginStart="120dp"
                                android:layout_marginTop="10dp"
                                android:fontFamily="@font/psb"
                                android:text="HELPLINE DESK"
                                android:textColor="@color/black"
                                android:textSize="22sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/textView22"
                                android:layout_marginLeft="20dp"
                                android:layout_marginTop="5dp"
                                android:layout_marginBottom="7dp"
                                android:layout_toRightOf="@id/animation3"
                                android:autoSizeMinTextSize="17sp"
                                android:autoSizeTextType="uniform"
                                android:text="Need any help? Click here to send a message to authority.\nTap on the notification bell to view replied message."
                                android:textSize="17sp" />
                        </RelativeLayout>
                    </androidx.cardview.widget.CardView>


                    <TextView
                        android:id="@+id/welcome"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="80dp"
                        android:fontFamily="@font/psb"
                        android:text="WELCOME"
                        android:textSize="30sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/user"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/ps"
                        android:text="User"
                        android:textSize="25sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/welcome" />

                    <com.airbnb.lottie.LottieAnimationView
                        android:id="@+id/lottieAnimationView3"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="64dp"
                        app:layout_constraintStart_toEndOf="@+id/welcome"
                        app:layout_constraintTop_toTopOf="parent"
                        app:lottie_autoPlay="true"
                        app:lottie_fileName="profileanim.json"
                        app:lottie_loop="true" />

                    <ImageView
                        android:id="@+id/msgBell"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_marginTop="80dp"
                        android:elevation="3dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/lottieAnimationView3"
                        app:layout_constraintTop_toTopOf="parent"
                        app:srcCompat="@drawable/ic_notifications_active_black_24dp" />

                </androidx.constraintlayout.widget.ConstraintLayout>
            </ScrollView>


        </LinearLayout>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:headerLayout="@layout/nav_header"
        app:menu="@menu/menu">

    </com.google.android.material.navigation.NavigationView>


</androidx.drawerlayout.widget.DrawerLayout>


