<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
  >
<androidx.cardview.widget.CardView
    android:id="@+id/card_verify"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/verifyotp"

    android:layout_gravity="center">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#86DFFF"
    android:layout_gravity="center"
    android:orientation="vertical">
    <ImageView
        android:id="@+id/phone_verify_image"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_gravity="center"

        android:background="@drawable/otp"
        android:scaleType="fitXY" />
</LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/phone_verify_image"

        >

        <LinearLayout
            android:id="@+id/frst_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Verification Code"
                android:textSize="25dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="Please type the verification code sent"
                android:textColor="@color/clr_grey_text"
                android:textSize="15dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/frst_ll"
            android:layout_centerInParent="true"
            android:layout_marginTop="60dp"
            android:gravity="center"
            android:id="@+id/second_ll"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/et_1"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginRight="8dp"
                android:background="@color/clr_grey_text_transparent"
                android:gravity="center"
                android:maxLength="1"
                android:textSize="20dp"
                android:textStyle="bold"
                android:inputType="phone"/>

            <EditText
                android:id="@+id/et_2"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginRight="8dp"
                android:background="@color/clr_grey_text_transparent"
                android:gravity="center"
                android:maxLength="1"
                android:textSize="20dp"
                android:textStyle="bold"
                android:inputType="phone"/>

            <EditText
                android:id="@+id/et_3"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginRight="8dp"
                android:background="@color/clr_grey_text_transparent"
                android:gravity="center"
                android:maxLength="1"
                android:textSize="20dp"
                android:textStyle="bold"
                android:inputType="phone"/>

            <EditText
                android:id="@+id/et_4"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginRight="8dp"
                android:background="@color/clr_grey_text_transparent"
                android:gravity="center"
                android:maxLength="1"
                android:textSize="20dp"
                android:textStyle="bold"
                android:inputType="phone"/>
            <EditText
                android:id="@+id/et_5"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginRight="8dp"
                android:background="@color/clr_grey_text_transparent"
                android:gravity="center"
                android:maxLength="1"
                android:textSize="20dp"
                android:textStyle="bold"
                android:inputType="phone"/>
            <EditText
                android:id="@+id/et_6"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginRight="8dp"
                android:background="@color/clr_grey_text_transparent"
                android:gravity="center"
                android:maxLength="1"
                android:textSize="20dp"
                android:textStyle="bold"
                android:inputType="phone"/>

        </LinearLayout>
        <Button
            android:id="@+id/buttonSignIn"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/second_ll"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:textColor="#86c1ff"
            android:text="Sign In"
            android:textAllCaps="false"
            android:background="@drawable/admin_button" />

        <ProgressBar

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/buttonSignIn"
            android:layout_centerHorizontal="true"
            android:visibility="gone" />
    </RelativeLayout>
</LinearLayout>
</androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>